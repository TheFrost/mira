/*Main container*/
.o-main {
  position relative
  z-index 10
  background-color white
  padding 1em 0
  box-shadow -1em 0 2em rgba(black, 0.6)
  &:after {
    content ''
    position absolute
    bottom 0
    left 0
    display block
    width 100%
    height 66px
    margin-bottom -35px
    background url('../img/fig-container.png') repeat-x center center
  }
  &--home {
    .o-content {
      float left
      width 100%
      +above(bp-large-alpha) {
        width calc(100% - 372px)
      }
    }
  }
  &--single {
    padding-top 0
    .o-main__inner {
      background-color white
    }
  }
  &__inner {
    position relative
    z-index 10
    background-color c_blue_base
  }
}


.o-feed {
  float left
  width 100%
  padding 0 1em
  +above(bp-large-alpha) {
    width 372px
  }

  &__widget {
    &--facebook {
      margin-bottom 1em
    }
  }

  &__content {
    &--desktop {
      display none
      +above(bp-large-alpha) {
        display block
      }
    }
    &--mobile {
      +above(bp-large-alpha) {
        display none
      }
    }
  }
}


.o-actions {
  margin-bottom 1em
  &__item {
    display inline-block
    width calc(50% - 0.5em)
    padding 1em
    background-color rgba(black, 0.1)
    transition all 0.2s ease-in-out
    &:hover {
      background-color rgba(black, 0.4)
    }
    &:nth-child(1) {
      float left
    }
    &:nth-child(2) {
      float right
    }
  }
  &__link {
    display block
    text-align center
    color white
    .fa {
      width 60px
      padding-left 4px
      margin-bottom 0.3em
      height 60px
      font-size 32px
      text-align center
      line-height 56px
      border 3px solid white
      border-radius 50%
    }
    span {
      display block
    }
  }
}


.o-social {
  padding 1em
  text-align center
  &__head {
    margin-bottom 1em
  }
  &__title {
    margin 0
    color c_green
  }
  &__link {
    @extend .u-btn-circle-bordered
    margin 0 0.2em
    border-color c_green
    color c_green
  }
}
